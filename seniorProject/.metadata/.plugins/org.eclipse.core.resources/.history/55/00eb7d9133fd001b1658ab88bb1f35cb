#ifndef COMMON_FOLDER_INC_DEFINITION_H_
#define COMMON_FOLDER_INC_DEFINITION_H_

#define PCM_CHUNK_SIZE 		1024
#define CHANNEL_NUMBER		2

#define SHIFT_AMOUNT		-8
typedef enum{
	NONE,
	HALF,
	FULL,
}flag_t;

typedef struct{
	ALIGN_32BYTES(int32_t leftChannel[2*PCM_CHUNK_SIZE]);
	ALIGN_32BYTES(int32_t rightChannel[2*PCM_CHUNK_SIZE]);
	ALIGN_32BYTES(int32_t pcmBuffer[2*CHANNEL_NUMBER][PCM_CHUNK_SIZE]);
}buffer_t;


#endif /* COMMON_FOLDER_INC_DEFINITION_H_ */
