#include "dsp.h"

void FIR_Filter_Init(dsp_buffer_t* buff, q15_t *coeff){
	for(uint32_t i = 0; i < CHANNEL_NUMBER; i++){
		arm_fir_init_q15(&buff[i].Filter_inst, TAPS, &coeff[0], buff[i].state, PCM_CHUNK_SIZE);
	}
}

void FIR_Filter(dsp_buffer_t* dsp, q15_t (*input)[PCM_CHUNK_SIZE], q15_t (*output)[PCM_CHUNK_SIZE]){
	for(uint32_t i = 0; i < CHANNEL_NUMBER; i++){
		arm_fir_fast_q15(&dsp[i].Filter_inst, &input[i][0], &output[i][0], PCM_CHUNK_SIZE);
	}
}

void FIR_Filter_Init_Float(dsp_buffer_float_t* buff, float *coeff){
	for(uint32_t i = 0; i < CHANNEL_NUMBER; i++){
		arm_fir_init_f32(&buff[i].Filter_inst, TAPS, &coeff[0], buff[i].state, PCM_CHUNK_SIZE);
	}
}

void FIR_Filter_Float(dsp_buffer_float_t* dsp, float (*input)[PCM_CHUNK_SIZE], float (*output)[PCM_CHUNK_SIZE]){
	for(uint32_t i = 0; i < CHANNEL_NUMBER; i++){
		arm_fir_f32(&dsp[i].Filter_inst, &input[i][0], &output[i][0], PCM_CHUNK_SIZE);
	}
}
