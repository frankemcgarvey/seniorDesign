/* USER CODE BEGIN PTD */

typedef struct{
	flag_t leftChannel;
	flag_t rightChannel;
}flag;

/* USER CODE END PTD */

/* Private define ------------------------------------------------------------*/
/* USER CODE BEGIN PD */

#ifndef HSEM_ID_0
#define HSEM_ID_0 (0U) /* HW semaphore 0*/
#endif


/* USER CODE END PD */

